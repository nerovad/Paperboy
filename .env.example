# .env.example
# Copy this file to .env and fill in your actual values

# Entra ID (Azure AD) Authentication
ENTRA_CLIENT_ID=your_entra_client_id_here
ENTRA_CLIENT_SECRET=your_entra_client_secret_here
ENTRA_TENANT_ID=your_azure_tenant_id_here

# GSABSS Database Connection
GSABSS_HOST=your_database_host
GSABSS_PORT=1433
GSABSS_USERNAME=your_database_username
GSABSS_PASSWORD=your_database_password
GSABSS_DATABASE=GSABSS
GSABSS_TIMEOUT=5

# Development email interceptor - all emails in dev will go here
DEV_EMAIL=your.email@example.com

# Power BI Configuration (for dashboard embedding)
# See docs/POWERBI_AUTH_INTEGRATION.md for setup instructions
# NOTE: You can reuse your existing Entra ID credentials by copying the values below
POWERBI_CLIENT_ID=${ENTRA_CLIENT_ID}
POWERBI_CLIENT_SECRET=${ENTRA_CLIENT_SECRET}
POWERBI_TENANT_ID=${ENTRA_TENANT_ID}

# Government Cloud (GCC) - Ventura County
POWERBI_AUTHORITY_URL=https://login.microsoftonline.us/${ENTRA_TENANT_ID}
POWERBI_SCOPE=https://analysis.usgovcloudapi.net/powerbi/api/.default
POWERBI_API_URL=https://api.powerbigov.us
POWERBI_EMBED_URL=https://app.powerbigov.us

# For Commercial Cloud (use these instead if NOT on GCC):
# POWERBI_AUTHORITY_URL=https://login.microsoftonline.com/your_tenant_id
# POWERBI_SCOPE=https://analysis.windows.net/powerbi/api/.default
# POWERBI_API_URL=https://api.powerbi.com
# POWERBI_EMBED_URL=https://app.powerbi.com
