<!-- Generated by Paperboy Form Builder -->
<div class="form-header">
  <h1>Edit Notice of Change</h1>
</div>

<div class="form-wrapper" data-controller="form-navigation conditional-fields">
  <%= form_with model: @notice_of_change_form, local: true do |form| %>

<!-- Page 1: Employee Info -->
<div class="form-page">
  <h2>Employee Info</h2>
<div class="form-row d-flex flex-wrap">
  <div class="form-group flex-fill">
    <%= form.label :employee_id, "Employee ID" %>
    <%= form.text_field :employee_id,
          class: "form-control",
          readonly: true %>
  </div>

  <div class="form-group flex-fill">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name,
          class: "form-control",
          readonly: true %>
  </div>

  <div class="form-group flex-fill">
    <%= form.label :phone, "Phone" %>
    <%= form.text_field :phone,
          class: "form-control",
          required: true,
          placeholder: "e.g. 555-555-5555",
          title: "Enter a 10-digit phone number like 555-555-5555",
          data: {
            controller: "phone",
            phone_target: "input",
            action: "input->phone#format paste->phone#format blur->phone#validate"
          },
          "aria-describedby": "phoneHelp phoneError",
          pattern: "\\d{3}-\\d{3}-\\d{4}",
          inputmode: "numeric",
          autocomplete: "tel" %>
    <small id="phoneHelp" class="help-text text-muted"></small>
    <div id="phoneError" data-phone-target="error" class="field-error" aria-live="polite"></div>
  </div>

  <div class="form-group flex-fill">
    <%= form.label :email, "Email" %>
    <%= form.text_field :email,
          class: "form-control",
          required: true %>
  </div>
</div>
      </div>

<!-- Page 2: Agency Info -->
<div class="form-page" style="display:none;">
  <h2>Agency Info</h2>
<div data-controller="gsabss-selects" class="form-row d-flex flex-wrap">
  <div class="form-group">
    <%= form.label :agency, "Agency" %>
    <%= form.select :agency,
          options_for_select(@agency_options, @notice_of_change_form.agency),
          {},
          class: "form-control",
          id: "agency-select",
          data: {
            gsabss_selects_target: "agency",
            action: "change->gsabss-selects#loadDivisions"
          } %>
  </div>

  <div class="form-group">
    <%= form.label :division, "Division" %>
    <%= form.select :division,
          options_for_select(@division_options, @notice_of_change_form.division),
          {},
          class: "form-control",
          id: "division-select",
          data: {
            gsabss_selects_target: "division",
            action: "change->gsabss-selects#loadDepartments"
          } %>
  </div>

  <div class="form-group">
    <%= form.label :department, "Department" %>
    <%= form.select :department,
          options_for_select(@department_options, @notice_of_change_form.department),
          {},
          class: "form-control",
          id: "department-select",
          data: {
            gsabss_selects_target: "department",
            action: "change->gsabss-selects#loadUnits"
          } %>
  </div>

  <div class="form-group">
    <%= form.label :unit, "Unit" %>
    <%= form.select :unit,
          options_for_select(@unit_options, @notice_of_change_form.unit),
          {},
          class: "form-control",
          id: "unit-select",
          data: { gsabss_selects_target: "unit" } %>
  </div>
</div>
      </div>

<!-- Page 3: Services -->
<div class="form-page" style="display:none;">
  <h2>Services</h2>
        <div class="form-row d-flex flex-wrap">
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :change_or_service_requested, "Change or Service Requested" %>
            <%= form.select :change_or_service_requested,
                  options_for_select(['Increase in Existing Service', 'Decrease in Existing Service', 'New Additional Service', 'New Basic Service', 'Occupancy Change', 'Special Service or Security', 'Maintenance', 'Utilities', 'Housekeeping', 'Grounds'], @notice_of_change_form.change_or_service_requested),
                  { include_blank: "Select..." },
                  { class: "form-control", required: true, data: { conditional_trigger: 'change_or_service_requested' } } %>
          </div>
          <div class="conditional-field" data-depends-on="change_or_service_requested" data-show-values="[&quot;Occupancy Change&quot;]" style="<%= ["Occupancy Change"].include?(@notice_of_change_form.change_or_service_requested) ? '' : 'display: none;' %>">
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :old_location_or_address, "Old Location or Address" %>
            <%= form.text_field :old_location_or_address, class: "form-control" %>
          </div>
          </div>
          <div class="conditional-field" data-depends-on="change_or_service_requested" data-show-values="[&quot;Occupancy Change&quot;]" style="<%= ["Occupancy Change"].include?(@notice_of_change_form.change_or_service_requested) ? '' : 'display: none;' %>">
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :new_location_or_address, "New Location or Address" %>
            <%= form.text_field :new_location_or_address, class: "form-control" %>
          </div>
          </div>
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :description_of_new_service, "Description of New Service" %>
            <%= form.text_area :description_of_new_service, rows: 5, class: "form-control", required: true %>
          </div>
        </div>
      </div>

<!-- Page 4: Billing Information -->
<div class="form-page" style="display:none;">
  <h2>Billing Information</h2>
        <div class="form-row d-flex flex-wrap">
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :object, "Object" %>
            <%= form.text_field :object, class: "form-control", required: true %>
          </div>
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :activity, "Activity" %>
            <%= form.text_field :activity, class: "form-control", required: true %>
          </div>
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :function, "Function" %>
            <%= form.text_field :function, class: "form-control", required: true %>
          </div>
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :program, "Program" %>
            <%= form.text_field :program, class: "form-control", required: true %>
          </div>
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :phase, "Phase" %>
            <%= form.text_field :phase, class: "form-control", required: true %>
          </div>
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :task, "Task" %>
            <%= form.text_field :task, class: "form-control", required: true %>
          </div>
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :monthly_cost, "Monthly Cost" %>
            <%= form.text_field :monthly_cost, class: "form-control", required: true %>
          </div>
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :annual_cost, "Annual Cost" %>
            <%= form.text_field :annual_cost, class: "form-control", required: true %>
          </div>
        </div>
      </div>

    <!-- Navigation Buttons -->
    <div class="navigation-buttons d-flex justify-content-between">
      <div>
        <button type="button" id="prevBtn" data-action="click->form-navigation#prevPage" style="display:none;">Previous</button>
      </div>
      <div>
        <button type="button" id="nextBtn" data-action="click->form-navigation#nextPage">Next</button>
        <%= form.submit "Update", data: { form_navigation_target: "submitButton" }, style: "display:none;" %>
      </div>
    </div>

    <!-- Progress (4 steps) -->
    <div class="progress-wrapper">
      <div class="progress-bar-container">
        <div class="progress-bar" id="progressBar"></div>
      </div>
      <div class="progress-dots">
        <% 4.times do |index| %>
          <div class="dot <%= 'active' if index == 0 %>"></div>
        <% end %>
      </div>
    </div>

  <% end %>
</div>
