<div id="confirm-modal"
     class="deny-modal-backdrop"
     data-confirm-modal-target="backdrop"
     style="display:none;">
  <div class="deny-modal" data-confirm-modal-target="modal" role="dialog" aria-modal="true" aria-labelledby="confirm-modal-title">
    <div class="deny-modal__header">
      <h3 id="confirm-modal-title" data-confirm-modal-target="title">Confirm</h3>
      <button type="button" class="deny-modal__close" data-action="confirm-modal#close" aria-label="Close">âœ•</button>
    </div>
    <div class="deny-modal__body">
      <p data-confirm-modal-target="message" style="margin-bottom: 24px; font-size: 1rem; color: #333;"></p>
      
      <%= form_with url: "#", method: :delete, local: true,
                    html: { "data-confirm-modal-target": "form" } do %>
        <div class="deny-modal__actions">
          <button type="button" class="btn" data-action="confirm-modal#close">Cancel</button>
          <button type="submit" class="btn deny">Remove</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
