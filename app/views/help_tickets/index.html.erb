<div class="form-header">
  <h1>Help Tickets</h1>
</div>

<div class="form-wrapper">
  <div class="form-actions" style="margin-bottom: 16px;">
    <%= link_to "New Ticket", new_help_ticket_path, class: "btn approve" %>
  </div>

  <h2>My Tickets</h2>
  <% if @my_tickets.any? %>
    <table class="submission-table">
      <thead>
        <tr>
          <th>Subject</th>
          <th>Status</th>
          <th>Created</th>
        </tr>
      </thead>
      <tbody>
        <% @my_tickets.each do |ticket| %>
          <tr>
            <td><%= link_to ticket.subject, help_ticket_path(ticket) %></td>
            <td><span class="badge <%= ticket.open? ? 'is-pending' : 'is-approved' %>"><%= ticket.status %></span></td>
            <td><%= ticket.created_at.strftime("%m/%d/%Y %I:%M %p") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="empty-state">
      <p>You haven't submitted any tickets yet.</p>
    </div>
  <% end %>

  <% if ticket_admin? %>
    <h2 style="margin-top: 32px;">All Tickets</h2>
    <% if @all_tickets.any? %>
      <table class="submission-table">
        <thead>
          <tr>
            <th>Subject</th>
            <th>Employee</th>
            <th>Status</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody>
          <% @all_tickets.each do |ticket| %>
            <tr>
              <td><%= link_to ticket.subject, help_ticket_path(ticket) %></td>
              <td><%= ticket.employee_name %></td>
              <td><span class="badge <%= ticket.open? ? 'is-pending' : 'is-approved' %>"><%= ticket.status %></span></td>
              <td><%= ticket.created_at.strftime("%m/%d/%Y %I:%M %p") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="empty-state">
        <p>No tickets have been submitted yet.</p>
      </div>
    <% end %>
  <% end %>
</div>
