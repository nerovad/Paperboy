<div id="main-content">
  <div class="form-header">
    <h1>Creative Job Request</h1>
  </div>

  <div class="form-wrapper">
    <%= form_with model: @creative_job_request, local: true, data: { controller: "form-navigation", form_navigation_target: "submitButton" } do |form| %>

      <div class="form-page" style="display: block;">
        <h2>Job Info</h2>
        <div class="form-row d-flex flex-wrap">
          <% form_fields = {
            job_id: "Job ID",
            job_title: "Job Title",
            job_type: "Job Type",
            job_agency: "Agency",
            job_division: "Division",
            job_department: "Department",
            job_unit: "Unit",
            asset_type: "Asset Type",
            employee_name: "Employee Name",
            location: "Location",
            date: "Date",
            description: "Description"
          } %>

          <% form_fields.each do |field, label| %>
            <div class="form-group flex-fill">
              <%= form.label field, label %>
              <% if field == :description %>
                <%= form.text_area field, class: "form-control" %>
              <% elsif field == :date %>
                <%= form.date_field field, class: "form-control" %>
              <% else %>
                <%= form.text_field field, class: "form-control" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="form-navigation">
        <%= form.submit "Submit", class: "btn btn-primary", data: { action: "click->form-navigation#submit" } %>
      </div>

    <% end %>
  </div>
</div>
