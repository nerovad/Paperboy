<!-- app/views/authorization_forms/show.html.erb -->
<div class="form-header">
  <h1>GSA Authorization Form</h1>
</div>

<div class="form-wrapper">
  <div class="form-inner">
  
    <%= render partial: "shared/readonly_record",
               locals: { record: @authorization_form,
                         exclude: %w[id created_at updated_at supervisor_id supervisor_email 
                                     delegated_approver_id delegated_approver_email 
                                     approved_by delegated_approved_by denied_by] } %>
    
    <div class="form-actions" style="margin-top: 16px;">
      <%= link_to "Back to Status", status_path, class: "form-btn" %>
      <%= link_to "Download PDF", pdf_authorization_form_path(@authorization_form), target: "_blank", class: "form-btn" %>
    </div>
  </div>
</div>
