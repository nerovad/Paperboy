<turbo-stream target="unit-select">
  <template>
    <%= form_with model: ParkingLotSubmission.new, local: true do |form| %>
      <%= form.select :unit,
          options_for_select(@unit_options.map { |u| ["#{u.Unit} - #{u.LongName}", u.Unit] }),
          { prompt: "Select Unit" },
          class: "form-control",
          id: "unit-select",
          data: {
            gsabss_selects_target: "unit"
          } %>
    <% end %>
  </template>
</turbo-stream>
