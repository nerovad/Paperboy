<h2>Login</h2>

<%= form_with url: user_session_path, method: :post do %>
  <div>
    <%= label_tag :employee_id, "Employee ID" %>
    <%= text_field_tag :employee_id, nil, required: true %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, required: true %> <!-- optional -->
  </div>

  <div>
    <%= submit_tag "Log in" %>
  </div>
<% end %>
