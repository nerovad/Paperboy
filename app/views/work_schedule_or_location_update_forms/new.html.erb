                  { class: "form-control", data: { conditional_trigger: 'proposed_schedule' } } %>
          </div>
          </div>
          <div class="conditional-field" data-depends-on="proposed_schedule" data-show-values="[&quot;Other&quot;]" style="display: none;">
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :other_proposed_schedule, "Other Proposed Schedule" %>
            <%= form.text_field :other_proposed_schedule, class: "form-control" %>
