                  { include_blank: "Select..." },
                  { class: "form-control", data: { conditional_trigger: 'present_location' } } %>
          </div>
          </div>
          <div class="conditional-field" data-depends-on="present_location" data-show-values="[&quot;JJC&quot;]" style="display: none;">
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :probation_cleared, "Probation Cleared" %>
            <%= form.select :probation_cleared,
                  options_for_select(['Yes', 'No']),
                  { include_blank: "Select..." },
                  { class: "form-control" } %>
          </div>
          </div>
          <div class="conditional-field" data-depends-on="type_of_change" data-show-values="[&quot;Location&quot;]" style="display: none;">
<div class="form-group flex-fill<%= '' %>">
  <%= form.label :effective_location_change_date, "Effective Location Change Date" %>
            <%= form.text_field :effective_location_change_date, class: "form-control" %>
          </div>
          </div>
        </div>
      </div>

